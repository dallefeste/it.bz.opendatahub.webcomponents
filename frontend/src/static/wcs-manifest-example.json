	"image": "wcs-logo.png",
	"searchTags": ["testing", "tools"],
	"dist": {
		"basePath": "dist",
		"files": ["no-existing-widget.min.js"]
	},
	"configuration": {
		"tagName": "testable-widget",
		"options": [
			{
				"key": "option0",
				"type": "text",
				"label": "TEST option0: TEXT",
				"required": false,
				"options": {
					"default": "true"
				}
			},
			{
				"key": "option1",
				"type": "text",
				"label": "TEST option1: TEXT (required)",
				"required": true,
				"options": {
					"default": "default text 2"
				}
			},
			{
				"key": "option2",
				"type": "textarea",
				"label": "TEST option2: TEXTAREA",
				"required": false,
				"options": {
					"default": ""
				}
			},
			{
				"key": "option3",
				"type": "select",
				"label": "TEST option3: SELECT",
				"required": false,
				"options": {
					"values": ["en", "de", "it"],
					"default": "en"
				}
			},
			{
				"key": "option4",
				"type": "multiselect",
				"label": "TEST option4: MULTISELECT",
				"required": false,
				"options": {
					"values": ["en", "de", "it"],
					"default": "de"
				}
			},
			{
				"key": "option5",
				"type": "null",
				"label": "TEST option5: NULL FIELD (required)",
				"required": true,
				"options": {
					"default": true
				}
			}
		]
	}
}
